<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".drivinglicense">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey, its time to verify you."
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins"/>


    <ImageView
        android:id="@+id/licenceimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"

        android:src="@drawable/upload_placeholder"
        android:layout_margin="20dp"/>



    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:borderColor="@android:color/black"
        app:borderWidth="0.8dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ambulanceNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="textCapSentences"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textColorHint="@android:color/black"

            android:hint="Ambulance Number"
            />





    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Ambulance type"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"/>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/alsswitch"
            android:padding="5dp"
            android:textSize="12sp"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALS"
            android:buttonTint="@color/black"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/blsswitch"
            android:padding="5dp"
            android:textSize="12sp"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLS"
            android:buttonTint="@color/black"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/morturaryswitch"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mortuary"
            android:textSize="12sp"

            android:padding="5dp"
            android:buttonTint="@color/black"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"/>

        <RadioButton
            android:id="@+id/intercityswitch"
            android:backgroundTint="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercity"
            android:textSize="12sp"

            android:padding="5dp"
            android:buttonTint="@color/black"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"/>













    </RadioGroup>


    <androidx.cardview.widget.CardView
        android:id="@+id/next123"
        android:layout_marginBottom="30dp"

        app:cardElevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#1273EB">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins"
                android:textSize="19sp"/>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"

                android:layout_marginRight="30dp"/>





        </RelativeLayout>




    </androidx.cardview.widget.CardView>





</LinearLayout>