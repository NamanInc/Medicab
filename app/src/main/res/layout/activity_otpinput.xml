<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".otpinput">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"/>




        </RelativeLayout>







    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="19dp"
        android:fontFamily="@font/poppins"
        android:text="Enter the 6-digit code sent to you at +91 895645659  "/>


    <LinearLayout

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >


        <EditText
            android:id="@+id/code_1"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginRight="7dp"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/black"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/code_2"
            android:maxLength="1"
            android:inputType="number"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/black"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/code_3"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/black"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/code_4"
            android:maxLength="1"
            android:inputType="number"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/black"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/code_5"
            android:maxLength="1"
            android:layout_marginLeft="7dp"
            android:inputType="number"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/black"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/code_6"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@android:color/black"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            tools:ignore="RtlCompat" />





    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        android:textColor="#0954AF"
        android:fontFamily="@font/poppins"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/verify_otp"
        android:layout_marginBottom="30dp"

        app:cardElevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#1273EB">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/poppins"
                android:textSize="19sp"/>








        </RelativeLayout>




    </androidx.cardview.widget.CardView>





</LinearLayout>